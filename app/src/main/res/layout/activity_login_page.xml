<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.LoginPageActivity">
    <!-- Log in -->
    <RelativeLayout
        android:id="@+id/log_in"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:clipToOutline="true"
        >

        <TextView
            android:layout_width="248dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginLeft="79dp"
            android:layout_marginTop="150dp"
            android:layout_marginEnd="80dp"
            android:fontFamily="@font/cafe24_ohsquare"
            android:gravity="center_horizontal|center_vertical"
            android:text="BRIDGES"
            android:textColor="@color/black"
            android:textFontWeight="700"
            android:textSize="30sp"
            app:lineHeight="35.4sp" />

        <ImageView
            android:id="@+id/login_page_logo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="30dp"
            android:layout_marginStart="155dp"
            android:layout_marginEnd="155dp"
            android:background="@drawable/app_logo_img"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.139" />
    </RelativeLayout>



    <!-- drawable/log_in.xml -->

    <View
        android:id="@+id/login_view1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <View
        android:id="@+id/login_view2"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/login_et_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:layout_marginTop="290dp"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="140dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/login_id_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/inter_light"
            android:hint="아이디를 입력해주세요"
            android:inputType="textEmailAddress"
            android:lastBaselineToBottomHeight="20dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/login_not_ex_email_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:text="존재하지 않는 아이디입니다."
            android:textColor="@color/black"
            android:textSize="14dp"
            android:visibility="invisible" />

        <EditText
            android:id="@+id/login_password_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:backgroundTint="@color/black"
            android:fontFamily="@font/inter_light"
            android:hint="비밀번호를 입력해주세요"
            android:inputType="textPassword"
            android:lastBaselineToBottomHeight="20dp"
            android:maxLines="1"
            android:textColor="@color/black"
            android:textColorHint="@color/black"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/login_mismatch_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="3dp"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/inter_medium"
            android:text="아이디와 비밀번호가 일치하지 않습니다."
            android:textColor="@color/black"
            android:textSize="12dp"
            android:visibility="invisible" />

    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="505dp"
        android:layout_marginEnd="29dp"
        android:layout_marginBottom="107dp"
        android:background="@color/black"
        android:fontFamily="@font/inter_medium"
        android:foreground="?selectableItemBackground"
        android:gravity="center"
        android:minHeight="0dp"
        android:paddingVertical="12.48dp"
        android:text="LOGIN"
        android:textColor="@color/white"
        android:textSize="15sp"
        tools:ignore="TextContrastCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/login_other_btn_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="557dp"
        android:layout_marginBottom="30dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_to_reg_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:paddingStart="36dp"
            android:paddingEnd="18dp"
            android:text="회원가입"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

        <View
            android:id="@+id/login_line_view1"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="22dp"
            android:background="@color/black" />

        <Button
            android:id="@+id/login_find_pwd_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:paddingHorizontal="18dp"
            android:text="비밀번호 찾기"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck" />

        <View
            android:id="@+id/login_line_view2"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginVertical="22dp"
            android:background="@color/black" />

        <Button
            android:id="@+id/login_reg_ask_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:paddingStart="18dp"
            android:paddingEnd="36dp"
            android:text=" 로그인 문의"
            android:textColor="@color/black"
            android:textSize="15sp"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

</RelativeLayout>